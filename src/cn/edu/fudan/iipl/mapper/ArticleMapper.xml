	<!--                       select                       -->

    <select id="getAll" resultMap="articleMap" useCache="true">
        select * from article
    </select>
    
    <select id="getById" parameterType="int" resultMap="articleMap" useCache="true">
        select * from article where id=#{id}
    </select>
    
    <select id="getByTitle" parameterType="String" resultMap="articleMap" useCache="true">
        select * from article where title=#{title}
    </select>
    
    <select id="getByCategory" parameterType="String" resultMap="articleMap" useCache="true">
        select * from article where category=#{category}
    </select>
    
    <select id="getByAuthor" parameterType="String" resultMap="articleMap" useCache="true">
        select * from article where author=#{author}
    </select>
    
    <select id="getByGmtCreate" parameterType="java.sql.Date" resultMap="articleMap" useCache="true">
        select * from article where gmt_create=#{gmtCreate}
    </select>

    
    <!--                       update                        -->
    
    <update id="updateArticle" parameterType="cn.edu.fudan.iipl.entity.Article">
        update article set
        title=#{title},mainbody=#{mainBody},category=#{category},author=#{author},gmt_modify=#{gmtModify} where id=#{id}
    </update>
    
    
    <!--                       insert                       -->
    
    <insert id="addArticle" parameterType="cn.edu.fudan.iipl.entity.Article">
        insert into article(title,mainbody,category,author,gmt_create,gmt_modify) values(#{title},#{mainBody},#{category},#{author},#{gmtCreate},#{gmtModify})
    </insert>
    
    
    <!--                       delete                       -->
    
    <delete id="deleteById" parameterType="int">
        delete from article where id=#{id}
    </delete>
    
    <delete id="deleteByTitle" parameterType="String">
        delete from article where title=#{title}
    </delete>
    
</mapper>