 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="cn.edu.fudan.iipl.dao.ArticleDao">

<cache eviction="LRU" size="1024" readOnly="true">  
</cache> 

<!-- Very Complex Result Map -->
